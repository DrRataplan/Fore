<exf-model id="address">

    <exf-instance>
        <data>
            <salary></salary>
            <average>12000</average>
        </data>
    </exf-instance>

    <exf-bind ref="salary">
        <exf-required expr="true()">
            <exf-alert>firstname is required</exf-alert>
        </exf-required>
        <exf-type expr="xs:decimal">
            <exf-alert>salary is not a decimal</exf-alert>
        </exf-type>
        <exf-constraint expr=". lt ../average">
            <exf-alert>your salary is too low</exf-alert>
        </exf-constraint>
    </exf-bind>
</exf-model>


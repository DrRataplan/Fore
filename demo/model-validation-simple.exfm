<fore-model id="address">

    <fore-instance>
        <data>
            <salary></salary>
            <average>12000</average>
        </data>
    </fore-instance>

    <fore-bind ref="salary">
        <fore-required expr="true()">
            <fore-alert>firstname is required</fore-alert>
        </fore-required>
        <fore-type expr="xs:decimal">
            <fore-alert>salary is not a decimal</fore-alert>
        </fore-type>
        <fore-constraint expr=". lt ../average">
            <fore-alert>your salary is too low</fore-alert>
        </fore-constraint>
    </fore-bind>
</fore-model>

